<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".device">

    <include layout="@layout/toolbar"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:id="@+id/d1"
        android:background="#1EAA8E">
        <ImageView
            android:id="@+id/devicesetback"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            app:srcCompat="@drawable/ic_back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="裝置資料設定"
            android:textSize="26sp"
            android:textColor="#FFFFFF"/>
        <Button
            android:id="@+id/deditbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:shadowColor="#00FFFFFF"
            android:layout_gravity="right"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="編輯" />
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="ExtraText"
        android:layout_above="@+id/d2"
        android:layout_below="@+id/d1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/device2">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="35dp"
                android:background="@drawable/white_circleborder2"
                android:padding="4dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/device_image"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/dodo3"
                    app:civ_border_color="#000000"
                    app:civ_border_width="0.5dp" />
            </FrameLayout>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="150dp"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/ic_device" />

            <View
                android:layout_width="290dp"
                android:layout_height="0.5dip"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="190dp"
                android:background="#686868"
                android:gravity="center" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="200dp"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/ic_gender" />

            <View
                android:layout_width="290dp"
                android:layout_height="0.5dip"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="240dp"
                android:background="#686868" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="250dp"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/ic_birth" />

            <View
                android:layout_width="290dp"
                android:layout_height="0.5dip"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="290dp"
                android:background="#686868" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginLeft="53dp"
                android:layout_marginTop="300dp"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/ic_distance" />

            <View
                android:layout_width="290dp"
                android:layout_height="0.5dip"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="340dp"
                android:background="#686868" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_marginLeft="53dp"
                android:layout_marginTop="350dp"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/ic_note" />

            <View
                android:layout_width="290dp"
                android:layout_height="0.5dip"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="390dp"
                android:background="#686868" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="95dp"
                android:layout_marginTop="158dp"
                android:background="@null"
                android:text="Apple"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="95dp"
                android:layout_marginTop="308dp"
                android:background="@null"
                android:text="150 m"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="95dp"
                android:layout_marginTop="252dp"
                android:background="@null"
                android:text="1989/10/10"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="95dp"
                android:layout_marginTop="358dp"
                android:background="@null"
                android:text="請輸入自我介紹"
                android:textColor="#000000"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginLeft="95dp"
                android:layout_marginTop="208dp"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/ic_male" />
        </RelativeLayout>
    </ScrollView>

    <Button
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:id="@+id/d2"
    android:layout_centerHorizontal="true"
    android:background="@drawable/sqrbutton"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="15dp"
    android:text="移 除 裝 置"
    android:textColor="#FF0000"
    android:textSize="20sp" />
</RelativeLayout>