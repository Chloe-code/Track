<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MessageActivity">


    <include layout="@layout/toolbar_message" />

    <TextView
            android:id="@+id/tgl"
            android:text="19 Dec 2019 "
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    <TextView

        android:layout_width="190dp"
        android:layout_height="47dp"
        android:layout_below="@+id/tgl"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/picture_chat"
        android:paddingLeft="25dp"
        android:paddingTop="14dp"
        android:text="HELLO NI HOW MA"
        android:textColor="#000000" />

    <ImageView
        android:id="@+id/picture_chat"
        android:layout_width="60dp"
        android:layout_height="58dp"
        android:layout_below="@+id/tgl"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/ic_people" />





</RelativeLayout>