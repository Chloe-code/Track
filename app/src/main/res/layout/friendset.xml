<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"    >android:background="@drawable/underline"
    android:layout_height="wrap_content"

    >
 <include layout="@layout/toolbar_message"/>

    <TextView
        android:id="@+id/fri_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:text="好友檔案"
        android:textColor="#707070"
        android:textSize="26sp"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/fri_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:text="好友狀態"
            android:textColor="#707070"
            android:textSize="26sp"></TextView>

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/fri_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textColor="#707070"
            android:textSize="26sp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/fri_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:text="刪除好友"
        android:textColor="#F70808"
        android:textSize="26sp"
        android:layout_marginBottom="20dp"></TextView>






</LinearLayout>