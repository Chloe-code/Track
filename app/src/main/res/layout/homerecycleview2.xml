<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="46dp"
    android:layout_height="75dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="1dp">

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/homepic"
        android:gravity="bottom"
        android:textColor="@android:color/black"
        android:textSize="10dp"
        android:text="Apple"/><!--android:gravity="center_vertical|center_horizontal"android:layout_below="@+id/userpicture"-->

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_centerVertical="true"
        android:id="@+id/homepic"
        android:background="@drawable/white_circleborder">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/userpicture" />
    </FrameLayout>
</RelativeLayout>